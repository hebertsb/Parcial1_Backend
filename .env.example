# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True

# Face Recognition Provider Configuration
# Options: 'Microsoft' or 'Local'
FACE_RECOGNITION_PROVIDER=Local

# Azure Face API Configuration (required if using Microsoft provider)
AZURE_FACE_API_KEY=your-azure-face-api-key
AZURE_FACE_ENDPOINT=https://your-face-service.cognitiveservices.azure.com/

# Local Face Recognition Configuration
FACE_LOCAL_THRESHOLD=0.6

# Database Configuration (if using different from SQLite)
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# CORS Configuration (if needed for frontend)
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
