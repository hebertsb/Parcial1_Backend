# ===================================================
# VARIABLES DE ENTORNO PARA RAILWAY
# ===================================================
# Copia estas variables en Railway App Settings > Variables

# Django Configuration
DJANGO_SETTINGS_MODULE=core.settings_production
SECRET_KEY=tu-secret-key-super-segura-aqui
DEBUG=False

# Database (si usas PostgreSQL en Railway)
# DATABASE_URL se configurará automáticamente por Railway si agregas PostgreSQL

# Superuser (opcional)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=tu-email@ejemplo.com
DJANGO_SUPERUSER_PASSWORD=tu-password-segura

# OCR Configuration
TESSERACT_CMD=/usr/bin/tesseract

# Azure Face API (si la usas)
# AZURE_FACE_KEY=tu-azure-key
# AZURE_FACE_ENDPOINT=https://tu-region.api.cognitive.microsoft.com/

# Dropbox (si la usas)
# DROPBOX_ACCESS_TOKEN=tu-dropbox-token

# CORS Origins (dominios de tu frontend)
# FRONTEND_URL=https://tu-frontend.netlify.app

# Railway Configuration
PORT=8000
RAILWAY_ENVIRONMENT=production